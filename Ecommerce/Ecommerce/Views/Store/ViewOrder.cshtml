@model P1Models.Cart

@{
    ViewData["Title"] = "OrderDetails";
}

<div>
    <h4>Order Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOrder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Items)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Items)
        </dd>
    </dl>
</div>

@for (int i = 0; i < Model.Items.Count(); i++)
{
    <tr>
        <td>
            @(i+1)
        </td>
        <td>
            @Html.DisplayFor(m => m.Items[i].ProductId)
        </td>
        <td>
            @Html.DisplayFor(m => m.Items[i].Make)
        </td>
        <td>
            @Html.DisplayFor(m => m.Items[i].Quantity)
        </td>
        <td>
            @Html.DisplayFor(m => m.Items[i].Price)
        </td>
    </tr>
}


<form asp-action="AddCart">
    <div class="form-group">
        <input type="submit" value="Add to Cart" class="btn btn-primary" />
    </div>
</form>

<form asp-action="Checkout">
    <div class="form-group">
        <input type="submit" value="Checkout" class="btn btn-primary" />
    </div>
</form>